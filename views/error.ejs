<% layout("../layout/boilerplate.ejs") %>

<div class="container text-center mt-5" style="padding-bottom: 100px;">
    <h1 style="font-size: 3rem; color: #ff385c; font-weight: bold;">Error <%= error.status %></h1>
    <p style="font-size: 1.5rem; color: #555; margin-top: 10px;"><%= error.message %></p>
    
    <div class="mt-5">
        <img src="../assets/error1.png" 
             alt="Error Illustration" 
             style="width: 300px; max-width: 100%; margin-bottom: 70px; border-radius: 10px;">
    </div>
    <div class="mt-4">
        <a href="/index" class="btn" 
           style="background-color: #ff385c; color: white; font-weight: bold; padding: 12px 25px; text-decoration: none; border-radius: 8px;">
            Go Back Home
        </a>
    </div>
</div>
