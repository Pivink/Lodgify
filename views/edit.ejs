<% layout("../layout/boilerplate.ejs") %>

<div class="container mt-5">
    <div class="form-container" style="max-width: 1000px; margin: auto; padding: 30px;">
        <h2 class="text-center" style="font-weight: bold; color: #222;">Edit Your Listing</h2>
        <form action="/<%= idx._id %>/edit?_method=PUT" method="post" novalidate>
            <div class="mb-4">
                <label for="title" style="font-weight: bold; color: #333; font-size: 16px;">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter title" value="<%= idx.title %>" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;" required>
                <div class="valid-feedback">
                    Title updated successfully!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid title.
                </div>
            </div>
            <div class="mb-4">
                <label for="description" style="font-weight: bold; color: #333; font-size: 16px;">Description</label>
                <textarea class="form-control" id="description" name="description" placeholder="Enter description" rows="4" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;" required><%= idx.description %></textarea>
                <div class="valid-feedback">
                    Description looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a description.
                </div>
            </div>
            <div class="mb-4">
                <label for="image" style="font-weight: bold; color: #333; font-size: 16px;">Image URL</label>
                <input type="text" class="form-control" id="image" name="image" placeholder="Enter image URL" value="<%= idx.image %>" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
                <div class="valid-feedback">
                    Image URL updated successfully!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid image URL.
                </div>
            </div>
            <div class="mb-4">
                <label for="price" style="font-weight: bold; color: #333; font-size: 16px;">Price</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Enter price" value="<%= idx.price %>" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;" required>
                <div class="valid-feedback">
                    Price updated successfully!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid price.
                </div>
            </div>
            <div class="mb-4">
                <label for="location" style="font-weight: bold; color: #333; font-size: 16px;">Location</label>
                <input type="text" class="form-control" id="location" name="location" placeholder="Enter location" value="<%= idx.location %>" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;" required>
                <div class="valid-feedback">
                    Location updated successfully!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid location.
                </div>
            </div>
            <div class="mb-4">
                <label for="country" style="font-weight: bold; color: #333; font-size: 16px;">Country</label>
                <input type="text" class="form-control" id="country" name="country" placeholder="Enter country" value="<%= idx.country %>" required style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
                <div class="valid-feedback">
                    Country updated successfully!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid country.
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn" style="background-color: #ff385c; color: white; font-weight: bold; border: none; border-radius: 5px; padding: 10px 20px;">Update Profile</button>
            </div>
        </form>
    </div>
</div>